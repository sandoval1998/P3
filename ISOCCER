                System.out.println("DIGITE O TELEFONE DO FUNCIONARIO");
                telefone_presidente = input.nextInt();
                System.out.println();
            }
            else if(escolha == 2)
            {
                System.out.println("DIGITE O NOME DO FUNCIONARIO");
                nome_medico = input.next();
                System.out.println("DIGITE O E-MAIL DO FUNCIONARIO");
                email_medico = input.next();
                System.out.println("DIGITE O CPF DO FUNCIONARIO");
                cpf_medico = input.nextInt();
                System.out.println("DIGITE O CRM DO FUNCIONARIO");
                crm_medico = input.nextInt();
                System.out.println("DIGITE O SALÁRIO DO FUNCIONARIO");
                salario_medico = input.nextFloat();
                System.out.println("DIGITE O TELEFONE DO FUNCIONARIO");
                telefone_medico = input.nextInt();
                System.out.println();
            }
            else if(escolha == 3)
            {
                System.out.println("DIGITE O NOME DO FUNCIONARIO");
                nome_tecnico = input.next();
                System.out.println("DIGITE O E-MAIL DO FUNCIONARIO");
