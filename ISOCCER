        System.out.println("ADICIONAR FUNCIONARIOS - 1");
        System.out.println("RECURSOS FISICOS - 2");
        System.out.println("SÓCIO TORCEDOR - 3");
        System.out.println("SOLICITAR RELATÓRIOS - 4");
        int opcao = input.nextInt();  
        
        while(opcao != 0)
        {            
            if(opcao == 1)
            {
                funcionario();
            }
            else if(opcao == 2)
            {
                //recursos_fisicos();
            }
            else if(opcao == 3)
            {
                //socio_torcedor();            
            }
            else if(opcao == 4)
            {
                
