                System.out.println("DIGITE O CPF DO FUNCIONARIO");
                cpf_preparador[i_array_prepar] = input.nextInt();
                System.out.println("DIGITE O SALÁRIO DO FUNCIONARIO");
                salario_preparador[i_array_prepar] = input.nextFloat();
